@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;

}

<h4>Rezervasyon Sayfası</h4>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>Iptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.Checkout).ToString("dd-MMM-yyyy"))</td>
                    <td><span class="badge badge-primary px-2">@item.Status</span></td>
                    <td><a href="/BookingAdmin/ApprovedReservation2/@item.BookingId" class="btn btn-outline-success">Onayla</a></td>
                    <td><a href="/BookingAdmin/CancelReservation/@item.BookingId" class="btn btn-outline-danger">Iptal Et</a></td>
                    <td><a href="/BookingAdmin/WaitReservation/@item.BookingId" class="btn btn-outline-warning">Beklet</a></td>
                    <td><a href="/BookingAdmin/UpdateReservation/@item.BookingId" class="btn btn-outline-dark">Güncelle</a></td>
                    <td><a href="/BookingAdmin/DeleteReservation/@item.BookingId" class="btn btn-outline-warning">Rezervasyon Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
