
@model CreateUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Otel Giriş Panel</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminTheme/assets/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="~/adminTheme/css/style.css" rel="stylesheet">
    
    
</head>

<body class="h-100">
    
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->



    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                
                                    <a class="text-center" href="index.html"> <h4>Otel Giriş Paneli</h4></a>
        
                                <form asp-controller="Register" asp-action="Index" method="post" class="mt-5 mb-5 login-input">
                                    <div class="form-group">
                                        <input type="text" class="form-control"  placeholder="Adınız" asp-for="Name" >
                                        <span asp-validation-for="Name" class="text-warning"></span>
                                    </div>
                                    <div class="form-group">
                                         <input type="text" class="form-control"  placeholder="Soyadınız" asp-for="Surname" >
                                        <span asp-validation-for="Surname" class="text-warning"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control"  placeholder="Kullanıcı Adınız" asp-for="UserName" >
                                        <span asp-validation-for="UserName" class="text-warning"></span>
                                    </div>
                                     <div class="form-group">
                                        <input type="text" class="form-control"  placeholder="Email" asp-for="Email" >
                                        <span asp-validation-for="Email" class="text-warning"></span>
                                    </div>
                                     <div class="form-group">
                                           <input type="password" class="form-control"  placeholder="Şifreniz" asp-for="Password" >
                                        <span asp-validation-for="Password" class="text-warning"></span>
                                    </div>
                                     <div class="form-group">
                                           <input type="password" class="form-control"  placeholder="Şifrenizi tekrar giriniz" asp-for="ConfirmPassword" >
                                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                    </div>
                                    <button class="btn login-form__btn submit w-100">Kayıt Ol</button>
                                </form>
                                    <p class="mt-5 login-form__footer">Bir hesabın var mı? <br />
                                        <a href="/Login/Index/" class="text-primary">Oturum Aç</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/adminTheme/plugins/common/common.min.js"></script>
    <script src="~/adminTheme/js/custom.min.js"></script>
    <script src="~/adminTheme/js/settings.js"></script>
    <script src="~/adminTheme/js/gleek.js"></script>
    <script src="~/adminTheme/js/styleSwitcher.js"></script>
</body>
</html>







